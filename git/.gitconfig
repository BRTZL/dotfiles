[user]
    name = Bartu OZEL
    email = info@bartuozel.com

[core]
    editor = code --wait
	pager = delta
    excludesfile = ~/.gitignore_global

[delta]
    side-by-side = true
    hyperlinks = true
    hyperlinks-file-link-format = "code://file/{path}:{line}"

[init]
    defaultBranch = main

[pull]
    rebase = false

[push]
    autoSetupRemote = true

[alias]
    st = status
    co = checkout
    br = branch
    cm = commit -m
    lg = log --oneline --graph --decorate
    undo = reset HEAD~1 --mixed
    amend = commit --amend --no-edit
